<h1>Your Registered Applications</h1>

<div class="row">
  <div class="col-md-8">
  <% @registered_applications.each do |app| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to app.name, app %>
          <small>Tracked since <%= app.created_at.strftime('%A, %B %-d, %l:%M %P') %></small>
        </h4>
      </div>
    </div>
  <% end %>
  </div>

  <div class="col-md-4 text-center">
    <%= link_to "Register Another App?", new_registered_application_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>
