<div>
  <h1><%= @registered_application.name %></h1>
  <small>You've been tracking this app since <%= time_ago_in_words(@registered_application.created_at) %> ago.</small>
</div>

<div class="row">
  <div class="col-md-8">
    <h3><%= @registered_application.url %></h3>
    <%= pie_chart @registered_application.events.group(:name).count %>
    <ul>
    <% @events.sort_by { |_k,v| v.count }.reverse.each do |k,v| %>
      <li><strong><%= k %>:</strong>  has happened  <em><%= v.count %></em>  times</li>
    <% end %>
    </ul>
    <%= line_chart @registered_application.events.group(:name).group_by_month(:created_at).count %>
  </div>

  <div class="col-md-4 text-center">
    <%= link_to "Edit Details", edit_registered_application_path(@registered_application), class: 'btn btn-success btn-lg' %>
  </div>
</div>
